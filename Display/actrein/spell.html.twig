{% extends 'RPGSRDBundle:Templates:base.html.twig' %}

{% block body %}
{% if variables.source is defined or meta.block.isSRD %}
	<p class="statblock-source">
		{% if variables.source is defined %}
			{{ variables.source }} 
		{% endif %}
		{% if meta.block.isSRD %}
			<strong>SRD</strong>
		{% endif %}
	</p>
{% endif %}
<h1>{{variables.name }}</h1>

{% if variables.castingtime %}
	<div class="statblock-stat"><strong>Casting Time</strong> <span>{% if variables.concentration is defined and variables.concentration == 1 %} Concentration, {% endif %}  {{ variables.castingtime }} </span></div>
{% endif %}
{% if variables.range %}
	<div class="statblock-stat"><strong>Range</strong> <span> {{ variables.range }}</span></div>
{% endif %}
{% if variables.duration %}
	<div class="statblock-stat"><strong>Duration</strong> <span> {{ variables.duration }}</span></div>
{% endif %}

<p class="m-t-10 m-b-20">
	{% if variables.description %}
		{{variables.description}}
	{% endif %} 

	{% if variables.higherlevels %} <br><strong>At higher levels: </strong>{{variables.higherlevels}}{% endif %} 
</p>
{% if variables.classes %}
	<div  class="statblock-stat"><strong>Class(es):</strong> <span>{{ variables.classes }}</span></div>
{% endif %}



{% endblock %}
