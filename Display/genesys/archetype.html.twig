{% extends 'RPGSRDBundle:Templates:base.html.twig' %}

{% block body %}
<h3 class="genesys">{{variables.name}}</h3>
<p class="genesys">{{variables.description}}</p>
<h5 class="genesys">Archetype Abilities</h5>
<div class="characteristics">
    <span class="genesys bra">{{variables.bra}}</span>
    <span class="genesys agi">{{variables.agi}}</span>
    <span class="genesys int">{{variables.int}}</span>
    <span class="genesys cun">{{variables.cun}}</span>
    <span class="genesys wil">{{variables.wil}}</span>
    <span class="genesys pre">{{variables.pre}}</span>
</div>
<ul class="genesys abilities">
    <li class="genesys"><strong>Starting Wound Threshold: </strong><span>{{variables.wound_threshold}} + Brawn</span></li>
    <li class="genesys"><strong>Starting Strain Threshold: </strong><span>{{variables.strain_threshold}} + Willpower</span></li>
    <li class="genesys"><strong>Starting Experience: </strong><span>{{variables.starting_exp}}</span></li>
    {{variables.special_abilities|ParseList}}
</ul>
{% endblock %}