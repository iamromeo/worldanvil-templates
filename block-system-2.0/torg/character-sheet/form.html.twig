{% macro genSkill(id, name, att, add, value, dname, datt) %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>{% if name == '' %}{% set name = dname %}{% set att = datt %}{% endif %}
    <td class="lbl" title="Skill: {{name}}"><input value="{{ name }}" class="form-control" id="skill_name_{{id}}" name="skill_name_{{id}}" placeholder="eg Scholar, Stealth, Survival" type="text" /></td>
    <td class="{{eo}} num c" title="Attribute: {{att}}">
        <select class="form-control"  id="skill_attr_{{id}}" name="skill_attr_{{id}}">
        <option value="CHA" {% if att is defined and att == "CHA" %}selected="selected" {% endif %} >CHA</option>
        <option value="DEX" {% if att is defined and att == "DEX" %}selected="selected" {% endif %} >DEX</option>
        <option value="MIND" {% if att is defined and att == "MIND" %}selected="selected" {% endif %} >MIND</option>
        <option value="SPIRIT" {% if att is defined and att == "SPIRIT" %}selected="selected" {% endif %} >SPIRIT</option>
        <option value="STRENGTH" {% if att is defined and att == "STRENGTH" %}selected="selected" {% endif %} >STRENGTH</option>
        </select>
    </td>
    <td class="{{eo}} num" title="Skill Add: {{add}}"><input value="{{ add }}" class="form-control" id="skill_adds_{{id}}" name="skill_adds_{{id}}" type="text" /></td>
    <td class="{{eo}} num" title="Value: {{value}}"><input value="{{ value }}" class="form-control" id="skill_value_{{id}}" name="skill_value_{{id}}" type="text" /></td>
</tr>{% endmacro genSkill %}
{% macro genPerk(id, name, req, effect) %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>
<th class="lbl l">Perk</th><td class="hdr" title="Perk: {{name}}"><input value="{{ name }}" class="form-control" id="perk_name_{{id}}" name="perk_name_{{id}}" placeholder="eg Critical Strike" type="text" /></td></tr>
<tr><th class="lbl l">Prereq.</th><td class="txt" title="Prerequisite: {{req}}"><input value="{{ req }}" class="form-control" id="perk_prereq_{{id}}" name="perk_prereq_{{id}}" placeholder="eg Frightening Aspect" type="text" /></td></tr>
<tr><td class="txt" colspan=2 title="Perk Effect"><textarea class="form-control"  id="perk_effect_{{id}}" name="perk_effect_{{id}}" rows="10" placeholder="description of the perk">{{ effect }}</textarea></td>
</tr>{% endmacro genPerk %}
{% macro genWeapon(id, name, axiom, dmg, ammo, range, notes) %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>
