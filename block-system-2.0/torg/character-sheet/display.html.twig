{% macro genSkill(id, name, att, add, value, dname, datt) %}
{% if name != '' or dname != empty %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>
{% if name == '' %}{% set name = dname %}{% set att = datt %}{% endif %}
    <td class="lbl" title="Skill: {{name}}">{{name}}</td>
    <td class="{{eo}} num c" title="Attribute: {{att}}">{{att}}</td>
    <td class="{{eo}} num" title="Skill Add: {{add}}">{{add}}</td>
    <td class="{{eo}} num" title="Value: {{value}}">{{value}}</td>
</tr>{% endif %}{% endmacro genSkill %}
{% macro genPerk(id, name, req, effect) %}{% if name != '' %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>
<th class="lbl l">Perk</th><td class="hdr c" title="Perk: {{name}}">{{name}}</td></tr>
<tr><th class="lbl l">Prereq.</th><td class="txt" title="Prerequisite: {{req}}">{{req}}</td></tr>
<tr><td class="txt" colspan=2 title="Perk Effect">{{effect}}</td>
</tr>{% endif %}{% endmacro genPerk %}
{% macro genWeapon(id, name, axiom, dmg, ammo, range, notes) %}
{% if name != '' %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>
<td class="lbl" title="Weapon: {{name}}">{{name}}</td>
<td class="{{eo}} txt">{{axiom}}</td>
<td class="{{eo}} txt">{{dmg}}</td>
<td class="{{eo}} txt">{{ammo}}</td>
<td class="{{eo}} txt">{{range}}</td>
<td class="{{eo}} txt">{{notes}}</td>
</tr>{% endif %}{% endmacro genWeapon %}
{% macro genArmour(id, name, axiom, adds, notes) %}
{% if name != '' %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}<tr>
<td class="lbl" title="Perk: {{name}}">{{name}}</td>
<td class="{{eo}} txt">{{axiom}}</td>
<td class="{{eo}} txt">{{adds}}</td>
<td class="{{eo}} txt">{{notes}}</td>
</tr>{% endif %}{% endmacro genArmour %}
