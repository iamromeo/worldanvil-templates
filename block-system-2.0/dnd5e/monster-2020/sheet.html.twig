                <span><strong>Burrow:</strong> {{variables.burrow_movement_in_ft}}ft</span>
            {% endif %}
            {% if variables.swim_movement_in_ft %}
                <span><strong>Swim:</strong> {{variables.swim_movement_in_ft}}ft</span>
            {% endif %}
