<div>
	<h3>{{ variables.name }}</h3>
   	<p><b>Aspect{% if variables.character_aspect_2 is defined and variables.character_aspect_2 != "" %}s{% endif %}</b>: {{variables.character_aspect_1}}{% if variables.character_aspect_2 is defined and variables.character_aspect_2 != "" %}, {{ variables.character_aspect_2}}{% endif %}</p>
	{% if variables.good_3_skill is defined and variables.good_3_skill != "None" %}
		<div class="row">
		 <div class="col-md-2">
			<b>{{ variables.good_3_skill}}</b>
		 </div>
		 <div class="col-md-2">
			[roll:4dF+3]
		 </div>
		</div>
	{% endif %}
	{% if variables.fair_2_skill is defined and variables.fair_2_skill != "None" %}
		<div class="row">
		 <div class="col-md-2">
			<b>{{ variables.fair_2_skill}}</b>
		 </div>
		 <div class="col-md-2">
			[roll:4dF+2]
		 </div>
		</div>
	{% endif %}
	{% if variables.average_1_skill_1 is defined and variables.average_1_skill_1 != "None" %}
		<div class="row">
		 <div class="col-md-2">
			<b>{{ variables.average_1_skill_1}}</b>
		 </div>
		 <div class="col-md-2">
			[roll:4dF+1]
		 </div>
		</div>
	{% endif %}
	{% if variables.average_1_skill_2 is defined and variables.average_1_skill_2 != "None" %}
		<div class="row">
			 <div class="col-md-2">
				<b>{{ variables.average_1_skill_2}}</b>
			 </div>
			 <div class="col-md-2">
				[roll:4dF+1]
			 </div>
		</div>
	{% endif %}
	{% if variables.stress_box_tracker is defined %}
	<div class="row">
		 <div class="col-md-2">
			<b>Stress</b>
		 </div>
		 <div class="col-md-2">
			 <input class="form-control"  name="stress_box_tracker"
			   type="number"
			   value="{{ variables.stress_box_tracker is defined ? variables.stress_box_tracker : 2}}" min="0" max="2">
		 </div>
	</div>
	{% endif %}
</div>