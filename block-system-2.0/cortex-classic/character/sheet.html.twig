{% macro genRollLine(id, name, att='d6', skill = '') %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
{% set die = '' %}
{% if att == '1' %}{% set die = 'd2' %}{% endif %}
{% if att == '2' %}{% set die = 'd4' %}{% endif %}
{% if att == '3' %}{% set die = 'd6' %}{% endif %}
{% if att == '4' %}{% set die = 'd8' %}{% endif %}
{% if att == '5' %}{% set die = 'd10' %}{% endif %}
{% if att == '6' %}{% set die = 'd12' %}{% endif %}
{% if att == '7' %}{% set die = 'd12+d2' %}{% endif %}
{% if att == '8' %}{% set die = 'd12+d4' %}{% endif %}
{% if att == '9' %}{% set die = 'd12+d6' %}{% endif %}
{% if att == '10' %}{% set die = 'd12+d8' %}{% endif %}
{% if att == '11' %}{% set die = 'd12+d10' %}{% endif %}
{% if att == '12' %}{% set die = 'd12+d12' %}{% endif %}
{% if skill == '1' %}{% set die = die ~ '+d2' %}{% endif %}
{% if skill == '2' %}{% set die = die ~ '+d4' %}{% endif %}
{% if skill == '3' %}{% set die = die ~ '+d6' %}{% endif %}
{% if skill == '4' %}{% set die = die ~ '+d8' %}{% endif %}
{% if skill == '5' %}{% set die = die ~ '+d10' %}{% endif %}
{% if skill == '6' %}{% set die = die ~ '+d12' %}{% endif %}
{% if skill == '7' %}{% set die = die ~ '+d12+d2' %}{% endif %}
{% if skill == '8' %}{% set die = die ~ '+d12+d4' %}{% endif %}
{% if skill == '9' %}{% set die = die ~ '+d12+d6' %}{% endif %}
{% if skill == '10' %}{% set die = die ~ '+d12+d8' %}{% endif %}
{% if skill == '11' %}{% set die = die ~ '+d12+d10' %}{% endif %}
{% if skill == '12' %}{% set die = die ~ '+d12+d12' %}{% endif %}
{% if die != '' %}{% set die = '[roll:' ~ die ~ ']' %}{% endif %}
<td class="lbl c {{eo}}" width="70%">{{name}}</td><td class="txt c {{eo}}">{{die}}</td>
{% endmacro genRollLine %}
{# ---------------------------------------------- #}
{% macro genLine(id, name, value = '') %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
<td class="lbl c {{eo}}" width="70%">{{name}}</td><td class="txt c {{eo}}">{{value}}</td>
{% endmacro genLine %}
{# ---------------------------------------------- #}
{% macro genWeaponLine(id, type = '', damage = '', range = '', ammo = '') %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
<td class="lbl c {{eo}}">{{type}}</td>
<td class="txt c {{eo}}">{{damage}}</td>
<td class="txt c {{eo}}">{{range}}</td>
<td class="txt c {{eo}}">{{ammo}}</td>
{% endmacro genWeaponLine %}
{# ---------------------------------------------- #}
{% macro genSkillLine(id, name, skill = '', dname = '') %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
{% if name == '' %}{% set name = dname %}{% endif %}
{% set skilledonly = '' %}{% if name|last == '*' %}{% set skilledonly = 'skilledonly' %}{% endif %}
{% set die = '' %}
{% if skill == '1' %}{% set die = die ~ 'd2' %}{% endif %}
{% if skill == '2' %}{% set die = die ~ 'd4' %}{% endif %}
{% if skill == '3' %}{% set die = die ~ 'd6' %}{% endif %}
{% if skill == '4' %}{% set die = die ~ 'd8' %}{% endif %}
{% if skill == '5' %}{% set die = die ~ 'd10' %}{% endif %}
{% if skill == '6' %}{% set die = die ~ 'd12' %}{% endif %}
{% if skill == '7' %}{% set die = die ~ 'd12+d2' %}{% endif %}
{% if skill == '8' %}{% set die = die ~ 'd12+d4' %}{% endif %}
{% if skill == '9' %}{% set die = die ~ 'd12+d6' %}{% endif %}
{% if skill == '10' %}{% set die = die ~ 'd12+d8' %}{% endif %}
