{% if skill == '12' %}{% set die = die ~ 'd12+d12' %}{% endif %}
{% if die != '' %}{% set die = '[roll:' ~ die ~ ']' %}{% endif %}
<td class="lbl l ev {{skilledonly}}" colspan=2 title="skill name">{{name}}</td><td class="txt c ev" title="skill die">{{die}}</td>
{% endmacro genSkillLine %}
