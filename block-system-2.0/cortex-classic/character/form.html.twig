{% macro genAttLine(id, name, value) %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
{% set attrib = name|lower %}
<td class="lbl c {{eo}}" width="70%">{{name}}</td><td class="txt c {{eo}}">
<select class="form-control" id="{{attrib}}" name="{{attrib}}">
<option value="1" {% if value is defined and value == "1" %}selected="selected" {% endif %} >d2</option>
<option value="2" {% if value is defined and value == "2" %}selected="selected" {% endif %} >d4</option>
<option value="3" {% if value is defined and value == "3" %}selected="selected" {% endif %} >d6</option>
<option value="4" {% if value is defined and value == "4" %}selected="selected" {% endif %} >d8</option>
<option value="5" {% if value is defined and value == "5" %}selected="selected" {% endif %} >d10</option>
<option value="6" {% if value is defined and value == "6" %}selected="selected" {% endif %} >d12</option>
<option value="7" {% if value is defined and value == "7" %}selected="selected" {% endif %} >d12+d2</option>
<option value="8" {% if value is defined and value == "8" %}selected="selected" {% endif %} >d12+d4</option>
<option value="9" {% if value is defined and value == "9" %}selected="selected" {% endif %} >d12+d6</option>
<option value="10" {% if value is defined and value == "10" %}selected="selected" {% endif %} >d12+d8</option>
<option value="11" {% if value is defined and value == "11" %}selected="selected" {% endif %} >d12+d10</option>
<option value="12" {% if value is defined and value == "12" %}selected="selected" {% endif %} >2d12</option>
</select>
</td>
{% endmacro genAttLine %}
{# ---------------------------------------------- #}
{% macro genLine(id, name, value = '') %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
<td class="lbl c {{eo}}" width="50%">{{name}}</td><td class="txt c {{eo}}">{{value}}</td>
{% endmacro genLine %}
{# ---------------------------------------------- #}
{% macro genInputLine(id, name, var, value = '', ph = '') %}{% set eo = "od" %}{% if id is even %}{% set eo = "ev" %}{% endif %}
<td class="lbl c {{eo}}" width="50%">{{name}}</td><td class="txt c {{eo}}"><input value="{{ value }}" class="form-control c" id="{{var}}" name="{{var}}" type="text" placeholder="{{ph}}"/></td>
{% endmacro genInputLine %}
